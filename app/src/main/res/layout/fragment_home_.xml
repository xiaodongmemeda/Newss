<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="test.qht.com.newss.view.fragment.Home_Frag">

    <!-- TODO: Update blank fragment layout -->
    <include android:id="@+id/t_include"
             layout="@layout/title_include"
    ></include>
    <android.support.design.widget.TabLayout
        android:id="@+id/frag_home_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t_include"

        android:layout_toLeftOf="@+id/frag_home_jia"
    ></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/frag_home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/frag_home_tablayout">

    </android.support.v4.view.ViewPager>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/frag_home_jia"
               android:src="@mipmap/channel_glide_night"
               android:scaleType="fitXY"
               android:layout_above="@+id/frag_home_viewpager"
               android:layout_alignParentEnd="true"/>


</RelativeLayout>
